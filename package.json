{
  "name": "sfc-composer",
  "version": "0.0.1",
  "description": "",
  "repository": "tahul/sfc-composer",
  "license": "MIT",
  "sideEffects": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "import": "./dist/vue.mjs",
      "require": "./dist/vue.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "unbuild -c build.config.ts",
    "dev": "vitest dev",
    "lint": "eslint --cache --ext .ts,.js,.mjs,.cjs .",
    "lint:fix": "eslint --cache --ext .ts,.js,.mjs,.cjs . --fix",
    "prepack": "pnpm run build",
    "release": "release-it",
    "test": "pnpm lint && vitest run --coverage"
  },
  "dependencies": {
    "magic-string": "^0.30.0"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.36.0",
    "@vitest/coverage-c8": "^0.29.3",
    "@vitest/ui": "^0.29.3",
    "changelogen": "^0.5.1",
    "eslint": "^8.36.0",
    "release-it": "^15.9.0",
    "typescript": "^5.0.2",
    "unbuild": "^1.1.2",
    "vite": "^4.2.0",
    "vitest": "^0.29.3",
    "vue": "^3.2.47"
  },
  "packageManager": "pnpm@7.28.0",
  "release-it": {
    "hooks": {
      "before:init": [
        "pnpm build",
        "pnpm test"
      ]
    },
    "npm": {
      "access": "public"
    },
    "git": {
      "commitMessage": "chore(release): release v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}"
    }
  }
}
